<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <!-- ðŸ”¹ Define Properties -->
    <Properties>
        <!-- Use system property 'log.file.path' if provided, else default -->
        <Property name="LOG_FILE">${sys:log.file.path:-logs/veeva-automation.log}</Property>
    </Properties>

    <!-- ðŸ”¹ Define Appenders -->
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </Console>

        <!-- File output -->
        <File name="FileLogger" fileName="${LOG_FILE}" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </File>
    </Appenders>

    <!-- ðŸ”¹ Define Loggers -->
    <Loggers>
        <!-- Root logger for global log level -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

        <!-- Package-specific logger for debug level -->
        <Logger name="com.veeva.automation" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>
    </Loggers>
</Configuration>
